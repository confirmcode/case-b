{% extends 'base.html.twig' %}

{% block title %}Пользователи{% endblock %}

{% block body %}
    {% if users is defined %}
    <div>
        <h3 class="d-inline-block mr-5">Пользователи</h3>
        <a href="{{path('app_user_new')}}" class="btn btn-sm btn-primary">Добавить</a>
        
        <ul>
            {% for user in users %}
            <li>{{user.firstname}} {{user.lastname}}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
{% endblock %}
